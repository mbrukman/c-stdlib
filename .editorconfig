# Docs: http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[BUILD, *.bzl]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 1

[*.py]
indent_style = space
indent_size = 4

[Makefile, Makefile.*, *.mk]
indent_style = tab
indent_size = 1
